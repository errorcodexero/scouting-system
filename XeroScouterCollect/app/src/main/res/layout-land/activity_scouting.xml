<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout tools:context=".ScoutingActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal|top">

        <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/tabhost"
            android:layout_gravity="center_horizontal|top" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@android:id/tabs" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/Autonomous"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/auto_lines_crossed"
                            android:id="@+id/textView7"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".15" >

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="@string/decrement"
                                android:id="@+id/btn_decrement_auto_lines_crossed"
                                android:layout_weight=".2" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText13"
                                android:layout_weight="1"
                                android:text="@string/default_text_0"
                                android:gravity="center_horizontal"
                                android:focusable="false" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="@string/increment"
                                android:id="@+id/btn_increment_auto_lines_crossed"
                                android:layout_weight=".2" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/auto_bunnies_picked_up"
                            android:id="@+id/textView8"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15" >

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="@string/decrement"
                                android:id="@+id/btn_decrement_auto_bunnies_picked_up"
                                android:layout_weight=".2" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText14"
                                android:layout_weight="1"
                                android:text="@string/default_text_0"
                                android:gravity="center_horizontal"
                                android:focusable="false" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="@string/increment"
                                android:id="@+id/btn_increment_auto_bunnies_picked_up"
                                android:layout_weight=".2" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/auto_bunnies_scored"
                            android:id="@+id/textView9"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.15" >

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="@string/decrement"
                                android:id="@+id/btn_decrement_auto_bunnies_scored"
                                android:layout_weight=".2" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText15"
                                android:layout_weight="1"
                                android:text="@string/default_text_0"
                                android:gravity="center_horizontal"
                                android:focusable="false" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="@string/increment"
                                android:id="@+id/btn_increment_auto_bunnies_scored"
                                android:layout_weight=".2" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.35"
                            android:weightSum="1" >

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="@string/back"
                                android:id="@+id/btn_auto_back"
                                android:layout_weight=".2" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".6" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="@string/next"
                                android:id="@+id/btn_auto_next"
                                android:layout_weight=".2" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Teleop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="1"
                            android:layout_gravity="center_horizontal"
                            android:gravity="left|right"
                            android:layout_weight=".10" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/lines_crossed"
                                android:id="@+id/text_lines_crossed"
                                android:layout_weight=".5" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/bunnies_deposited"
                                android:id="@+id/text_bunnies_deposited"
                                android:layout_weight=".5"
                                android:gravity="right" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.15"
                            android:weightSum="1"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".40" >

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/decrement"
                                    android:id="@+id/btn_decrement_lines_crossed" />

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/entry_lines_crossed"
                                    android:layout_weight="0.50"
                                    android:gravity="center_horizontal"
                                    android:text="@string/default_text_0"
                                    android:focusable="false" />

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/increment"
                                    android:id="@+id/btn_increment_lines_crossed" />
                            </LinearLayout>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight=".2" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".40" >

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/decrement"
                                    android:id="@+id/btn_decrement_bunnies_deposited" />

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/entry_bunnies_deposited"
                                    android:layout_weight="1"
                                    android:text="@string/default_text_0"
                                    android:gravity="center_horizontal"
                                    android:focusable="false" />

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/increment"
                                    android:id="@+id/btn_increment_bunnies_deposited" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="1"
                            android:layout_gravity="center_horizontal"
                            android:gravity="left|right"
                            android:layout_weight=".10" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/bunnies_picked_up"
                                android:id="@+id/text_bunnies_picked_up"
                                android:layout_weight=".5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/bunnies_stolen"
                                android:id="@+id/text_bunnies_stolen"
                                android:layout_weight=".5"
                                android:gravity="right" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.15"
                            android:weightSum="1"
                            android:layout_gravity="center_horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".40" >

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/decrement"
                                    android:id="@+id/btn_decrement_bunnies_picked_up" />

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/entry_bunnies_picked_up"
                                    android:layout_weight="0.50"
                                    android:text="@string/default_text_0"
                                    android:gravity="center_horizontal"
                                    android:focusable="false" />

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/increment"
                                    android:id="@+id/btn_increment_bunnies_picked_up" />
                            </LinearLayout>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight=".2" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".4" >

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/decrement"
                                    android:id="@+id/btn_decrement_bunnies_stolen" />

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/entry_bunnies_stolen"
                                    android:layout_weight="1"
                                    android:text="@string/default_text_0"
                                    android:gravity="center_horizontal"
                                    android:focusable="false" />

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/increment"
                                    android:id="@+id/btn_increment_bunnies_stolen" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="1"
                            android:gravity="left|right"
                            android:layout_weight=".10" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/shots_hit"
                                android:id="@+id/text_shots_hit"
                                android:layout_weight=".5" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/shots_missed"
                                android:id="@+id/text_shots_missed"
                                android:layout_weight=".5"
                                android:gravity="right" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.15"
                            android:weightSum="1"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".4" >

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/decrement"
                                    android:id="@+id/btn_decrement_shots_hit" />

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/entry_shots_hit"
                                    android:layout_weight="0.50"
                                    android:text="@string/default_text_0"
                                    android:gravity="center_horizontal"
                                    android:focusable="false" />

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/increment"
                                    android:id="@+id/btn_increment_shots_hit" />

                            </LinearLayout>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight=".2" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".4" >

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/decrement"
                                    android:id="@+id/btn_decrement_shots_missed" />

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/entry_shots_missed"
                                    android:layout_weight="1"
                                    android:text="@string/default_text_0"
                                    android:gravity="center_horizontal"
                                    android:focusable="false" />

                                <Button
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/increment"
                                    android:id="@+id/btn_increment_shots_missed" />
                            </LinearLayout>
                        </LinearLayout>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="@string/defensive"
                            android:id="@+id/chkbx_defensive_flag"
                            android:checked="false"
                            android:layout_weight="0.075" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".13" >

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/back"
                                android:id="@+id/btn_teleop_back"
                                android:layout_weight=".25"
                                android:layout_gravity="center_vertical" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/next"
                                android:id="@+id/btn_teleop_next"
                                android:layout_gravity="center_vertical|right"
                                android:layout_weight=".25" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Finalize"></LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </TabHost>
    </FrameLayout>
</FrameLayout>