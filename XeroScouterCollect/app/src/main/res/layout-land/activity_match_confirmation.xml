<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/lbl_tablet_id_match_confirmation"
        android:id="@+id/lbl_tablet_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/confirmation"
        android:id="@+id/lbl_confirmation"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:paddingBottom="15dp"
        android:layout_weight="0.97">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Match List"
                android:id="@+id/lbl_match_list"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:textSize="35sp" />

            <Spinner
                android:layout_width="327dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_match_list"
                android:prompt="@string/match_prompt"
                android:layout_gravity="center_horizontal" />

            <Button
                android:text="Update Teams"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_get_teams"
                android:onClick="onClick (SanityCheckActivity)"
                android:visibility="gone" />

            <TextView
                android:text="Team List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_team_list"
                android:gravity="center"
                android:textSize="40sp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/background_light"
                android:enabled="false"
                android:visibility="gone" />

            <Spinner
                android:layout_width="327dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_team_list"
                android:prompt="@string/team_prompt"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Teams"
                android:id="@+id/lbl_teams"
                android:textSize="35sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="5dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/team_1"
                        android:id="@+id/lbl_team_1"
                        android:paddingBottom="5dp"
                        android:textSize="35dp"
                        android:textIsSelectable="false"
                        android:focusable="false"
                        android:background="@android:color/holo_red_light"
                        android:layout_weight=".5"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/team_4"
                        android:id="@+id/lbl_team_4"
                        android:paddingBottom="5dp"
                        android:textSize="35dp"
                        android:textIsSelectable="false"
                        android:focusable="false"
                        android:background="@android:color/holo_blue_light"
                        android:layout_column="1"
                        android:layout_weight=".5"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/team_2"
                        android:id="@+id/lbl_team_2"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:textSize="35dp"
                        android:textIsSelectable="false"
                        android:focusable="false"
                        android:background="@android:color/holo_red_light"
                        android:layout_weight=".5"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/team_5"
                        android:id="@+id/lbl_team_5"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:textSize="35dp"
                        android:textIsSelectable="false"
                        android:focusable="false"
                        android:background="@android:color/holo_blue_light"
                        android:layout_weight=".5"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/team_3"
                        android:id="@+id/lbl_team_3"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:textSize="35dp"
                        android:textIsSelectable="false"
                        android:focusable="false"
                        android:background="@android:color/holo_red_light"
                        android:layout_weight=".5"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/team_6"
                        android:id="@+id/lbl_team_6"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:textSize="35dp"
                        android:textIsSelectable="false"
                        android:focusable="false"
                        android:background="@android:color/holo_blue_light"
                        android:layout_weight=".5"
                        android:textAlignment="center" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".07" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:text="Home"
            android:layout_height="wrap_content"
            android:id="@+id/btn_home"
            android:layout_weight="1"
            android:layout_width="190dp"
            android:textSize="25sp"
            android:onClick="onClick" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.32" />

        <Button
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/btn_next"
            android:layout_gravity="right"
            android:onClick="onClick"
            android:textSize="25sp"
            android:layout_weight="1"
            android:layout_width="190dp" />
    </LinearLayout>

</LinearLayout>