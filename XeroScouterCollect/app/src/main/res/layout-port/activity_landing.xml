<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lbl_tablet_id"
            android:id="@+id/lbl_tablet_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lbl_event_name"
            android:id="@+id/lbl_event_name" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/lbl_welcome_message"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="72sp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:text="@string/btn_start_pit_scouting"
        android:id="@+id/btn_start_pit_scouting"
        android:textSize="40sp"
        android:layout_gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".01" />

    <Button
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:text="@string/btn_start_stand_scouting"
        android:id="@+id/btn_start_stand_scouting"
        android:textSize="40sp"
        android:onClick="onClick"
        android:layout_gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Drive Team Feedback"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:id="@+id/btn_drive_team_feedback"
        android:layout_weight=".25"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:onClick="onClick" />
</LinearLayout>