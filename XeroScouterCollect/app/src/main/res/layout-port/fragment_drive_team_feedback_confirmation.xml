<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/lbl_tablet_id_match_confirmation"
        android:id="@+id/lblTabletID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/confirmation"
        android:id="@+id/lbl_confirmation"
        android:layout_gravity="center_horizontal"
        android:textSize="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".55">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Match List"
                android:id="@+id/lbl_match_list"
                android:layout_gravity="center_horizontal"
                android:textSize="40dp"
                android:paddingBottom="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spinner_match_list"
                android:prompt="@string/match_prompt"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:text="Team List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_team_list"
                android:gravity="center"
                android:textSize="40sp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/background_light" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spinner_team_list"
                android:prompt="@string/team_prompt"
                android:layout_gravity="center_horizontal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:text="Update Teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_get_teams"
                android:onClick="onClick"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Teams"
            android:id="@+id/lbl_teams"
            android:textSize="40dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:layout_weight=".2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".15" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".55"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/team_1"
                    android:id="@+id/lbl_team_1"
                    android:paddingBottom="5dp"
                    android:textSize="35dp"
                    android:textIsSelectable="false"
                    android:focusable="false"
                    android:background="@android:color/holo_blue_light"
                    android:layout_column="1"
                    android:layout_weight=".5"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/team_2"
                    android:id="@+id/lbl_team_2"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:textSize="35dp"
                    android:textIsSelectable="false"
                    android:focusable="false"
                    android:background="@android:color/holo_blue_light"
                    android:layout_weight=".5"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/team_3"
                    android:id="@+id/lbl_team_3"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:textSize="35dp"
                    android:textIsSelectable="false"
                    android:focusable="false"
                    android:background="@android:color/holo_blue_light"
                    android:layout_weight=".5"
                    android:textAlignment="center" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".15">

            <Button
                android:layout_height="match_parent"
                android:text="Home"
                android:id="@+id/btn_home"
                android:layout_gravity="right"
                android:onClick="onClick"
                android:layout_width="272dp" />

            <Space
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="80dp" />

            <Button
                android:layout_width="273dp"
                android:layout_height="match_parent"
                android:text="Next"
                android:id="@+id/btn_next"
                android:layout_gravity="right"
                android:onClick="onClick" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>