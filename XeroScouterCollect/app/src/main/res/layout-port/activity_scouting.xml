<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ScoutingActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/tabhost"
        android:layout_gravity="center_horizontal|top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs"></TabWidget>

            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Teleop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Autonomous"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="14.285">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="66.66">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="Baseline Cross"
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView8"
                                        android:layout_weight="27.20" />

                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/checkBox2" />

                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="7.52" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="14.285"
                            android:elevation="0dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="66.66">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="Fuel Bin Triggered"
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/textView3"
                                        android:layout_weight="50"
                                        android:password="false" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="50">

                                        <Button
                                            android:text="@string/decrement"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button4"
                                            android:layout_weight="23.33" />

                                        <EditText
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:inputType="number"
                                            android:ems="10"
                                            android:id="@+id/editText"
                                            android:layout_weight="45"
                                            android:text="@string/default_text_0"
                                            android:textAlignment="center" />

                                        <Button
                                            android:text="@string/increment"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button3"
                                            android:layout_weight="23.33" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="14.285">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="66.66">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="Gears Delivered"
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView7"
                                        android:layout_weight="50" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="50">

                                        <Button
                                            android:text="@string/decrement"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button10"
                                            android:layout_weight="23.33" />

                                        <EditText
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:inputType="number"
                                            android:ems="10"
                                            android:id="@+id/editText3"
                                            android:layout_weight="45"
                                            android:textAlignment="center"
                                            android:text="@string/default_text_0" />

                                        <Button
                                            android:text="@string/increment"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button9"
                                            android:layout_weight="23.33" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="14.285">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="66.66">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="Low Boiler Trips"
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView4"
                                        android:layout_weight="50" />

                                    <LinearLayout
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="50">

                                        <Button
                                            android:text="@string/decrement"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button6"
                                            android:layout_weight="23.33" />

                                        <EditText
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:inputType="number"
                                            android:ems="10"
                                            android:id="@+id/editText2"
                                            android:layout_weight="45"
                                            android:text="@string/default_text_0"
                                            android:textAlignment="center" />

                                        <Button
                                            android:text="@string/increment"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button5"
                                            android:layout_weight="23.33" />
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="14.285">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="66.66">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="High Goal Socre"
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView5"
                                        android:layout_weight="50" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="50">

                                        <Button
                                            android:text="@string/decrement"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button8"
                                            android:layout_weight="23.33" />

                                        <EditText
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:inputType="number"
                                            android:ems="10"
                                            android:id="@+id/editText4"
                                            android:layout_weight="45"
                                            android:text="@string/default_text_0"
                                            android:textAlignment="center" />

                                        <Button
                                            android:text="@string/increment"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button7"
                                            android:layout_weight="23.33" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="14.285">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="16.66"></LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="66.66">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="TextView"
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView6"
                                        android:layout_weight="50" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="50">

                                        <Button
                                            android:text="@string/decrement"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button12"
                                            android:layout_weight="23.33" />

                                        <EditText
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:inputType="number"
                                            android:ems="10"
                                            android:id="@+id/editText5"
                                            android:layout_weight="45"
                                            android:text="@string/default_text_0"
                                            android:textAlignment="center" />

                                        <Button
                                            android:text="@string/increment"
                                            android:layout_width="10dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/button11"
                                            android:layout_weight="23.33" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_weight="16.66"
                                android:layout_height="10dp"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_weight="14.285"
                            android:layout_height="wrap_content"></LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Finalize"
                    android:weightSum="1">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/finalizeDataView"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".8" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".2">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/back"
                            android:id="@+id/btn_finalize_back"
                            android:layout_weight=".25"
                            android:onClick="onClick" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/finish"
                            android:id="@+id/btn_finalize_finish"
                            android:layout_weight=".25"
                            android:onClick="onClick" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>
</FrameLayout>
