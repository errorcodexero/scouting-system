<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wilsonvillerobotics.com.xeroscoutercollect.Scouting">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:layout_gravity="center_horizontal|top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs"></TabWidget>

            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Teleop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|right"
                        android:layout_weight=".10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Lines Crossed"
                            android:id="@+id/textView" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.78" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Bunnies Deposited"
                            android:id="@+id/textView2"
                            android:layout_weight="0.21"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:id="@+id/button4" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText2"
                                android:layout_weight="0.50"
                                android:gravity="center_horizontal"
                                android:text="0" />

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:id="@+id/button3" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".50">

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:id="@+id/button" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText"
                                android:layout_weight="1"
                                android:text="0"
                                android:gravity="center_horizontal" />

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:id="@+id/button2" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|right"
                        android:layout_weight=".10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Bunnies Picked-up"
                            android:id="@+id/textView3" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.78" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Bunnies Stolen"
                            android:id="@+id/textView4"
                            android:layout_weight="0.21"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:weightSum="1"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5">

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:id="@+id/button8" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText4"
                                android:layout_weight="0.50"
                                android:text="0"
                                android:gravity="center_horizontal" />

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:id="@+id/button7" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50" >

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:id="@+id/button5" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText3"
                                android:layout_weight="1"
                                android:text="0"
                                android:gravity="center_horizontal" />

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:id="@+id/button6" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="1"
                        android:gravity="left|right"
                        android:layout_weight=".10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Shots Missed"
                            android:id="@+id/textView5"
                            android:layout_weight=".5" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Shots Missed"
                            android:id="@+id/textView6"
                            android:layout_weight=".5"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:id="@+id/button9" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText5"
                                android:layout_weight="0.50"
                                android:text="0"
                                android:gravity="center_horizontal" />

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:id="@+id/button10" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50" >

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:id="@+id/button11" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/editText6"
                                android:layout_weight="1"
                                android:text="0"
                                android:gravity="center_horizontal" />

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:id="@+id/button12" />
                        </LinearLayout>
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Defensive?"
                        android:id="@+id/chkbx_defensive_flag"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:layout_weight=".05" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".15">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Back"
                            android:id="@+id/button13"
                            android:layout_weight=".25"
                            android:layout_gravity="center_vertical" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Next"
                            android:id="@+id/button14"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight=".25" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Autonomous"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Auto Lines Crossed"
                        android:id="@+id/text_auto_lines_crossed"
                        android:layout_gravity="center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".15">

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/btn_decrement_auto_cross"
                            android:layout_weight="0.02" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/entry_auto_lines_crossed"
                            android:layout_weight="1"
                            android:text="0"
                            android:gravity="center_horizontal" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:id="@+id/btn_increment_auto_cross"
                            android:layout_weight="0.20" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.17" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Auto Bunnies Picked-Up"
                        android:id="@+id/text_auto_bunnies_picked_up"
                        android:layout_gravity="center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15">

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/btn_decrement_auto_bunnies_picked_up"
                            android:layout_weight="0.20" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/entry_auto_bunnies_picked_up"
                            android:layout_weight="1"
                            android:text="0"
                            android:gravity="center_horizontal" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:id="@+id/btn_increment_auto_bunnies_picked_up"
                            android:layout_weight="0.20" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.17" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Auto Bunnies Scored"
                        android:id="@+id/text_auto_bunnies_scored"
                        android:layout_gravity="center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.15">

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/btn_decrement_auto_bunnies_scored"
                            android:layout_weight="0.20" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/entry_auto_bunnies_scored"
                            android:layout_weight="1"
                            android:text="0"
                            android:gravity="center_horizontal" />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:id="@+id/btn_increment_auto_bunnies_scored"
                            android:layout_weight="0.20" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.35"
                        android:weightSum="1">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Back"
                            android:id="@+id/btn_auto_back" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.00" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Next"
                            android:id="@+id/btn_auto_next" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>
</FrameLayout>
