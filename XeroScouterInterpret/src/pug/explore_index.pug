| {% load render_bundle from webpack_loader %}
doctype html
body
    script
        | let OPR = parseFloat("{{OPR}}");
        | let DPR = parseFloat("{{DPR}}");
        | let team_list = []
        | let current_team = "{{ current_team }}";
        | let team_url = "{% url 'index' %}"
        | team_list = {{ team_list|safe }};
        | opr_y = {{ opr_y|safe }};
        | opr_team_dict = {{ opr_team_dict|safe }};
        | sorted_opr = {{ sorted_opr|safe }};
    include navbar
    .spacer.large
    .container
        #teamCarousel.carousel.slide(data-ride="carousel")
            ol.carousel-indicators
                li.active(data-target='#teamCarousel' data-slide-to='0')
                li(data-target='#teamCarousel' data-slide-to='1')
                li(data-target='#teamCarousel' data-slide-to='2')
                li(data-target='#teamCarousel' data-slide-to='3')
                li(data-target='#teamCarousel' data-slide-to='4')
            .carousel-inner(role='listbox')
                .item.active
                    .container-fluid
                        .well
                            p#firstTeam.text-center
                .item
                    .container-fluid
                        .well
                            p#secondTeam.text-center
                .item
                    .container-fluid
                        .well
                            p#thirdTeam.text-center
                .item
                    .container-fluid
                        .well
                            p#fourthTeam.text-center
                .item
                    .container-fluid
                        .well
                            p#fifthTeam.text-center

            a.left.carousel-control(href='#teamCarousel' role='button' data-slide='prev')
                span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                span.sr-only
                    |Previous
            a.right.carousel-control(href='#teamCarousel' role='button' data-slide='next')
                span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                span.sr-only
                    |Next
    #chartDiv(style="width: 640px; height: 400px;")
    #testing-div
    | {% render_bundle 'explore' %}
